{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": {
        "text": "Contribution Percentage of Each State by Blood Type",
        "fontSize": 20,
        "font": "Serif"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/HXianH/Homework-W10/refs/heads/main/normalized_blood_donors_by_year_and_blood_type.csv",
        "format": {
            "type": "csv"
        }
    },
    "params": [
        {
            "name": "year_selected",
            "value": 2019,
            "bind": {
                "input": "range",
                "min": 2019,
                "max": 2024,
                "step": 1,
                "name": "Year: "
            }
        },
        {
            "name": "blood_type_selected",
            "value": "a",
            "bind": {
                "input": "select",
                "options": [
                    "a",
                    "b",
                    "ab",
                    "o"
                ],
                "labels": [
                    "A",
                    "B",
                    "AB",
                    "O"
                ],
                "name": "Blood Type: "
            }
        }
    ],
    "selection": {
        "state_selection": {
            "type": "multi",
            "fields": [
                "state"
            ],
            "bind": "legend"
        }
    },
    "transform": [
        {
            "filter": "datum.year == year_selected"
        },
        {
            "filter": "datum.blood_type == blood_type_selected"
        },
        {
            "calculate": "toNumber(datum.donations)",
            "as": "Donations"
        },
        {
            "joinaggregate": [
                {
                    "op": "sum",
                    "field": "Donations",
                    "as": "OverallTotal"
                }
            ],
            "groupby": ["year", "blood_type"]
        },
        {
            "calculate": "(datum.Donations / datum.OverallTotal) * 100",
            "as": "Overall_Percentage"
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "arc",
                "innerRadius": 20,
                "stroke": "#fff"
            }
        },
        {
            "mark": {
                "type": "text",
                "radiusOffset": 20,
                "color": "black"
            },
            "encoding": {
                "text": {
                    "field": "Overall_Percentage",
                    "type": "quantitative",
                    "format": ".1f"
                }
            }
        }
    ],
    "encoding": {
        "theta": {
            "field": "donations",
            "type": "quantitative",
            "stack": true
        },
        "radius": {
            "field": "donations",
            "scale": {
                "type": "symlog",
                "zero": true,
                "rangeMin": 20
            }
        },
        "color": {
            "field": "state",
            "type": "nominal",
            "scale": {
                "range": ["#1f77b4", "#ff7f00", "#abdda4", "#984ea3", "#8c564b", "#e377c2", "#7f7f7f", "#bcbd22", "#FFD700", "#77CDFF", "#c5b0d5", "#2ca02c", "#fdae61"]
            },
            "legend": {
                "title": "State",
                "orient": "right"
            }
        },
        "tooltip": [
            {
                "field": "state",
                "type": "nominal",
                "title": "State"
            },
            {
                "field": "blood_type",
                "type": "nominal",
                "title": "Blood Type"
            },
            {
                "field": "donations",
                "type": "quantitative",
                "title": "Donations"
            },
            {
                "field": "Overall_Percentage",
                "type": "quantitative",
                "title": "Overall Percentage",
                "format": ".2f"
            }
        ]
    }
}